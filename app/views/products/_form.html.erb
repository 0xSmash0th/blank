<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :name_confirmation %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :volume %>
    <%= f.input :image %>
    <%= f.input :image_cache, as: :hidden %>
    <% if @product.image? %>
      <%= image_tag @product.image %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
